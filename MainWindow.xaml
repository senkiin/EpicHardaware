<Window x:Class="SystemMonitorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Monitor" Height="500" Width="800" Background="#121212" Foreground="White">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock FontSize="24" FontWeight="Bold" Text="System Monitor" Margin="0,0,0,20"/>

            <!-- CPU & GPU Temperatures -->
            <TextBlock FontSize="16" Text="CPU Temperature:"/>
            <TextBlock Name="CpuTempText" FontSize="20" FontWeight="Bold" Foreground="LightGreen"/>

            <TextBlock FontSize="16" Text="GPU Temperature:"/>
            <TextBlock Name="GpuTempText" FontSize="20" FontWeight="Bold" Foreground="LightGreen"/>

            <!-- Battery Status -->
            <TextBlock FontSize="16" Text="Battery Status:"/>
            <TextBlock Name="BatteryStatusText" FontSize="20" FontWeight="Bold" Foreground="LightBlue"/>

            <!-- Microphone & Camera Activity -->
            <TextBlock FontSize="16" Text="Microphone Active:"/>
            <TextBlock Name="MicStatusText" FontSize="20" FontWeight="Bold" Foreground="Orange"/>

            <TextBlock FontSize="16" Text="Camera Active:"/>
            <TextBlock Name="CamStatusText" FontSize="20" FontWeight="Bold" Foreground="Orange"/>

            <!-- Storage Health -->
            <TextBlock FontSize="16" Text="Storage Free Space:"/>
            <TextBlock Name="StorageText" FontSize="20" FontWeight="Bold" Foreground="LightYellow"/>

            <!-- Fan Speed & CPU Load -->
            <TextBlock FontSize="16" Text="Fan Speed:"/>
            <TextBlock Name="FanSpeedText" FontSize="20" FontWeight="Bold" Foreground="LightPink"/>

            <TextBlock FontSize="16" Text="CPU Load:"/>
            <TextBlock Name="CpuLoadText" FontSize="20" FontWeight="Bold" Foreground="LightCyan"/>
        </StackPanel>
    </Grid>
</Window>
